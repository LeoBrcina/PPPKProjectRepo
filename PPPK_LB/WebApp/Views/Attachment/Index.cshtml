@model IEnumerable<WebApp.ViewModels.AttachmentVM>
@{
    ViewBag.Title = "Attachments";
}

<h1>Attachments</h1>

<div class="mb-3">
    <a href="@Url.Action("Create", "Attachment")" class="btn btn-primary">Upload Attachments</a>
</div>

<div>
    <form method="get" action="@Url.Action("Index", "Attachment")">
        <label for="AppointmentFilter">Filter by Appointment:</label>
        <select id="AppointmentFilter" name="appointmentId" onchange="this.form.submit()">
            <option value="">All Appointments</option>
            @foreach (var item in ViewBag.Appointments as List<SelectListItem>)
            {
                <option value="@item.Value">@item.Text</option>
            }
        </select>
    </form>
</div>

<form method="post" action="@Url.Action("DeleteSelected", "Attachment")" id="bulkDeleteForm">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th><input type="checkbox" id="selectAll"></th>
                <th>ID</th>
                <th>Appointment</th>
                <th>File Name</th>
                <th>Uploaded At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var attachment in Model)
            {
                <tr>
                    <td><input type="checkbox" name="selectedAttachments" value="@attachment.AttachmentId"></td>
                    <td>@attachment.AttachmentId</td>
                    <td>@attachment.AppointmentId</td>
                    <td>@attachment.FileName</td>
                    <td>@attachment.UploadedAt?.ToString("g")</td>
                    <td>
                        <form method="post" asp-action="Delete" asp-controller="Attachment">
                            <input type="hidden" name="id" value="@attachment.AttachmentId" />
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-danger" id="deleteSelectedBtn" disabled>Delete Selected</button>
</form>

<script>
    document.getElementById("selectAll").addEventListener("change", function () {
        let checkboxes = document.querySelectorAll('input[name="selectedAttachments"]');
        checkboxes.forEach(checkbox => checkbox.checked = this.checked);
        toggleDeleteButton();
    });

    document.querySelectorAll('input[name="selectedAttachments"]').forEach(checkbox => {
        checkbox.addEventListener("change", toggleDeleteButton);
    });

    function toggleDeleteButton() {
        let checkedBoxes = document.querySelectorAll('input[name="selectedAttachments"]:checked').length;
        document.getElementById("deleteSelectedBtn").disabled = checkedBoxes === 0;
    }
</script>
