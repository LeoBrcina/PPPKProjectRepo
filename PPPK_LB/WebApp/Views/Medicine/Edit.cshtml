@model WebApp.ViewModels.MedicineVM

@{
    ViewData["Title"] = "Edit Medicine";
}

<h2>Edit Medicine</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="MedicineId" />

    <div class="form-group">
        <label asp-for="MedicineName" class="control-label"></label>
        <input asp-for="MedicineName" class="form-control" />
        <span asp-validation-for="MedicineName" class="text-danger"></span>
    </div>

    <br>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
