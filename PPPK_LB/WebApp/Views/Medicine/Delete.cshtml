@model WebApp.ViewModels.MedicineVM

@{
    ViewData["Title"] = "Delete Medicine";
}

<h2>Are you sure you want to delete this medicine?</h2>

<div>
    <h4>Medicine Name: <strong>@Model.MedicineName</strong></h4>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="MedicineId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
