@model List<WebApp.ViewModels.MedicineVM>

@{
    ViewData["Title"] = "Medicines List";
}

<h2>Medicines</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Medicine</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Medicine ID</th>
            <th>Medicine Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var medicine in Model)
        {
            <tr>
                <td>@medicine.MedicineId</td>
                <td>@medicine.MedicineName</td>
                <td>
                    <a asp-action="Details" asp-route-id="@medicine.MedicineId" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@medicine.MedicineId" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@medicine.MedicineId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
