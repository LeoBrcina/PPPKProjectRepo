@model WebApp.ViewModels.PrescriptionVM

@{
    ViewData["Title"] = "Edit Prescription";
}

<h1>Edit Prescription</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="PrescriptionId" />

    <div class="form-group">
        <label asp-for="PatientId" class="control-label"></label>
        <select asp-for="PatientId" class="form-control" asp-items="ViewBag.Patients" disabled>
        </select>
        <span asp-validation-for="PatientId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MedicineIds" class="control-label"></label>
        <select asp-for="MedicineIds" class="form-control" asp-items="ViewBag.Medicines" multiple>
        </select>
        <span asp-validation-for="MedicineIds" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
