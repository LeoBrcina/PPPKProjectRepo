@model WebApp.ViewModels.PrescriptionVM

@{
    ViewData["Title"] = "Create Prescription";
}

<h1>Create Prescription</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="PatientId" class="control-label"></label>
        <select asp-for="PatientId" class="form-control" asp-items="ViewBag.Patients">
            <option value="">-- Select Patient --</option>
        </select>
        <span asp-validation-for="PatientId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MedicineIds" class="control-label"></label>
        <select asp-for="MedicineIds" class="form-control" asp-items="ViewBag.Medicines" multiple>
        </select>
        <span asp-validation-for="MedicineIds" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
