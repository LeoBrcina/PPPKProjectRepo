@model WebApp.ViewModels.DiseaseVM

@{
    ViewData["Title"] = "Delete Disease";
}

<h2>Are you sure you want to delete this disease?</h2>

<div>
    <h4>Disease Name: <strong>@Model.DiseaseName</strong></h4>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="DiseaseId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
