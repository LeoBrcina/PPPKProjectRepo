@model WebApp.ViewModels.PatientVM

@{
    ViewData["Title"] = "Delete Patient";
}

<h2>Delete Patient</h2>

<div class="alert alert-danger">
    Are you sure you want to delete this patient? This action cannot be undone.
</div>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.FirstName @Model.LastName</h5>
        <p class="card-text"><strong>OIB:</strong> @Model.Oib</p>
        <p class="card-text"><strong>Date of Birth:</strong> @Model.DateOfBirth.ToShortDateString()</p>
        <p class="card-text">
            <strong>Gender:</strong>
            @if (Model.Gender == "M")
            {
                <span>Male</span>
            }
            else if (Model.Gender == "F")
            {
                <span>Female</span>
            }
            else
            {
                <span>Other</span>
            }
        </p>
    </div>
</div>

<hr />

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="PatientId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
