@model WebApp.ViewModels.MedicalRecordVM

@{
    ViewData["Title"] = "Delete Medical Record";
}

<h1>Delete Medical Record</h1>

<div class="alert alert-danger">
    Are you sure you want to delete this medical record?
</div>

<div class="form-group">
    <label>Patient Name:</label>
    <p>@Model.Patient.FirstName @Model.Patient.LastName</p>
</div>

<div class="form-group">
    <label>Disease(s):</label>
    <p>@string.Join(", ", Model.DiseaseNames)</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="RecordId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
