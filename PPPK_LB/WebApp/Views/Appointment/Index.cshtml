@model IEnumerable<WebApp.ViewModels.AppointmentVM>

@{
    ViewData["Title"] = "Appointments";
}

<h1>Appointments</h1>

<a asp-action="Create" class="btn btn-primary mb-3">Create New Appointment</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Appointment ID</th>
            <th>Appointment Date</th>
            <th>Patient</th>
            <th>Appointment Type</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appointment in Model)
        {
            <tr>
                <td>@appointment.AppointmentId</td>
                <td>@appointment.AppointmentDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@appointment.PatientName</td>
                <td>@appointment.AppointmentTypeName</td>
                <td>
                    <a asp-action="Details" asp-route-id="@appointment.AppointmentId" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@appointment.AppointmentId" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@appointment.AppointmentId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
